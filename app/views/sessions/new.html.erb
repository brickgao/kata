<%= form_for :session, html: {class: ['pure-form', 'pure-form-aligned']} do |f| %>
<fieldset>
  <legend>Login</legend>

  <div class="pure-control-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'pure-input-1-2' %>
  </div>

  <div class="pure-control-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'pure-input-1-2' %>
  </div>

  <div class="pure-controls">
    <%= f.submit "Login", class: ['pure-button', 'pure-button-primary'] %>
  </div>
</fieldset>
<% end %>
