<%= form_for :session, html: {class: ['kata-form']} do |f| %>
<fieldset>
  <legend>Login</legend>

  <%= f.label :email %>
  <%= f.text_field :email, class: 'pure-input-1-2' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'pure-input-1-2' %>

  <%= f.submit "Login", class: ['pure-button', 'pure-button-primary'] %>
</fieldset>
<% end %>
