<%= form_for :session, html: {class: ['kata-form']} do |f| %>
<fieldset>
  <legend>Login</legend>

  <%= render 'layouts/error_messages' %>

  <%= f.label :email %>
  <%= f.text_field :email, class: 'medium-width' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'medium-width' %>

  <%= f.submit "Login", class: ['kata-button', 'primary-button'] %>

</fieldset>
<% end %>
