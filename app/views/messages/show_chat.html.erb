<div class="chat">
  <% @messages.each do |message| %>
    <div class="message <%= message.to.id == current_user.id ? "message-left" : "message-right" %>">
        <% if message.to.id != current_user.id %>
          <div class="message-body">
            <p>
              <%= message.body %>
            </p>
          </div>
        <% end %>
        <div class="user-profile">
          <div class="avatar">
            <img src="<%= get_gavater_img(message.from.email, 50) %>"/>
          </div>
          <div class="name">
            <%= message.from.name %>
          </div>
        </div>
        <% if message.to.id == current_user.id %>
          <div class="message-body">
            <p>
              <%= message.body %>
            </p>
          </div>
        <% end %>
    </div>
  <% end %>
</div>
