<% if flash[:danger] %>
<div class="message error-message">
  <div><%= flash[:danger] %></div>
</div>
<% elsif @user && @user.errors.any? %>
<div class="message error-message">
  <div>The form contains <%= pluralize(@user.errors.count, "error") %></div>
  <ul>
  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>
<% end %>
