<%= form_for @node, html: {class: ['kata-form']} do |f| %>
<fieldset>
  <legend>Edit Node</legend>

  <%= render 'layouts/error_messages' %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'medium-width' %>

  <%= f.label :summary %>
  <%= f.text_field :summary, class: 'medium-width' %>

  <%= f.label :icon_url %>
  <%= f.text_field :icon_url, class: 'medium-width' %>

  <%= f.submit "Save Node", class: ['kata-button', 'primary-button'] %>

</fieldset>
<% end %>
