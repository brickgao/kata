<div class="posts">
  <% @posts.each do |post| %>
    <div class="post-summary">
      <div class="post-summary-title">
        <a href="/posts/<%= post.id %>"><%= post.title %></a>
      </div>
      <div class="post-summary-author">
        <a href="/users/<%=post.user.id %>"><%= post.user.name %></a> posted at <%= post.created_at %>, on <%= post.node.name %>
      </div>
    </div>
  <% end %>
  <div class="paginator">

    <ul>
    <% for i in 1..@pages_count %>
      <% if i == @current_page %>
      <li class="selected">
      <% else %>
      <li>
      <% end %>
        <span><a href="/?page=<%= i %>"><%= i %></a></span>
      </li>
    <% end %>
    </ul>
  </div>
</div>
