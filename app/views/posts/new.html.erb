<%= form_for @post, html: {class: ['kata-form']} do |f| %>
<fieldset>
  <legend>Create Post</legend>

  <%= render 'layouts/error_messages' %>

  <%= f.label :title %>
  <%= f.text_field :title, class: 'long-width' %>

  <%= f.label :body %>
  <%= f.text_area :body, class: ['long-width', 'post-text'] %>

  <%= f.label :enable_markdown %>
  <%= f.check_box :enable_markdown %>

  <%= f.label :node %>
  <%= f.select :node, [], {}, class: 'short-width' %>

  <%= f.submit "Create Post", class: ['kata-button', 'primary-button'] %>
</fieldset>
<% end %>
